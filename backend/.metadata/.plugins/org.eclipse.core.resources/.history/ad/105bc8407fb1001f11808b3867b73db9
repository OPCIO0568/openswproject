package fundsite.fund_web_backend.dto;

import fundsite.fund_web_backend.model.Donation;

public class DonationDTO {
    private Long id;
    private Double collectedAmount;
    private Long createrId;
    private String description;
    private Long donationType;
    private Double goalAmount;
    private String mainImage;
    private String subtitle;
    private String title;

    public DonationDTO(Donation donation) {
        this.id = donation.getId();
        this.collectedAmount = donation.getCollectedAmount();
        this.createrId = donation.getCreater_id();
        this.description = donation.getDescription();
        this.donationType = donation.getDonationType();
        this.goalAmount = donation.getGoalAmount();
        this.mainImage = donation.getMainImage();
        this.subtitle = donation.getSubtitle();
        this.title = donation.getTitle();
    }

    // Getters and Setters
}
